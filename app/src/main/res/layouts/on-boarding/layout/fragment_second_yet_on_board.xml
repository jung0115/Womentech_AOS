<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onBoarding.second.SecondYetOnBoardFragment"
    android:clickable="true"
    android:background="@color/white">

    <!-- 이전으로 이동 -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="12dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_btn"/>

    <!-- 단계 표시 -->
    <TextView
        android:id="@+id/text_second_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:text="@string/on_board_second_step"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/main_color_1"/>

    <!-- 설명 -->
    <TextView
        android:id="@+id/text_second_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="20dp"
        android:text="@string/on_board_second_select3_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black01"
        android:layout_below="@id/text_second_step"/>

    <!-- 할 수 있는 거 -->
    <LinearLayout
        android:id="@+id/linear_yet_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="14dp"
        android:background="@drawable/shape_yet_info_background"
        android:orientation="vertical"
        android:layout_below="@id/text_second_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="@string/on_board_yet_info1"
            android:textColor="@color/gray01"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray06"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="@string/on_board_yet_info2"
            android:textColor="@color/gray01"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_more_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/on_board_yet_more"
        android:textColor="@color/main_color_1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_above="@id/img_more_info"/>
    
    <ImageView
        android:id="@+id/img_more_info"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_on_board_more_info"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/linear_view_edu_onboard"/>

    <!-- 다음 단계로 -->
    <LinearLayout
        android:id="@+id/linear_view_edu_onboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="26dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/main_color_1"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/text_view_edu_onboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_edu_on_board"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>